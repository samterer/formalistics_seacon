<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <!-- Drop Shadow Stack -->
     <item>
        <shape>
            <padding  android:top="1dp"/> 
             <solid android:color="@color/cloud_border_color" />
        </shape>
    </item>
      <item>
        <shape>
           <padding android:right="1dp"/>
            <solid android:color="@color/cloud_border_color" />
        </shape>
    </item>
     <item>
        <shape>
            <padding  android:bottom="1dp"/>
            <solid android:color="@color/cloud_border_color" />
        </shape>
    </item>
    <item>
        <shape>
       		<padding  android:left="1dp"/> 
       		 <corners android:topLeftRadius="3dp" android:topRightRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="3dp" />
            <solid android:color="@color/cloud_border_color" />
        </shape>
    </item> 

    <!-- Background -->
    <item>
	<shape>
            <solid android:color="#e8e7e7" />
	    <corners android:topLeftRadius="3dp" android:topRightRadius="0dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="3dp" />
	</shape>
    </item>

</layer-list>
