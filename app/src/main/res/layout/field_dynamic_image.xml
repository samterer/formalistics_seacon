<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/FField"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FTextView"/>

    <LinearLayout
        android:id="@+id/FDynamicImage_llActionsContainer"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_browse_image"
            android:id="@+id/FDynamicImage_bBrowseImage"
            android:layout_weight="1"
            style="@style/FButtonOrange"/>

        <Button
            android:layout_marginLeft="@dimen/element_break"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_take_image"
            android:layout_weight="1"
            android:id="@+id/FDynamicImage_bTakeNewImage"
            style="@style/FButtonOrange"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_text"
        android:id="@+id/FDynamicImage_tvNotificationMessage"/>

    <ImageView
        android:layout_marginTop="4dp"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:src="@drawable/image_placeholder_300"
        android:id="@+id/FDynamicImage_ivDynamicImage"/>

</LinearLayout>