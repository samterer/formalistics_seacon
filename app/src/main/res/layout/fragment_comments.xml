<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/Comment_lvCommentsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Comment_rlActionsContainer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:divider="@null">
    </ListView>

    <RelativeLayout
        android:id="@+id/Comment_rlActionsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/clouds"
        android:orientation="vertical">

        <Button
            android:id="@+id/Comment_bSubmitComment"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/send_btn"/>

        <EditText
            android:id="@+id/Comment_etCommentText"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/Comment_bSubmitComment"
            android:layout_toStartOf="@+id/Comment_bSubmitComment"
            android:ems="10"
            android:height="50dp"
            android:hint="@string/hint_write_comment"
            android:padding="3dp"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>
