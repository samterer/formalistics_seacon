<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="FButton">
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="FButtonOrange">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ColumnHeader">
        <item name="android:background">@drawable/layer_list_tableitem_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ColumnDark">
        <item name="android:background">@drawable/layer_list_tableitem_dark</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ColumnLight">
        <item name="android:background">@drawable/layer_list_tableitem_light</item>
        <item name="android:padding">3dp</item>
    </style>

</resources>
